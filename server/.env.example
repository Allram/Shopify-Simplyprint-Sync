# Server
PORT=4000
NODE_ENV=development

# Basic Auth (optional)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=change_me

# Database
DATABASE_URL="file:../data/app.db"

# Shopify
SHOPIFY_SHOP_DOMAIN=my-shop.shopify.com
SHOPIFY_APP_API_KEY=your_app_key
SHOPIFY_APP_API_SECRET=your_app_secret
SHOPIFY_APP_URL=https://your-public-app-url
SHOPIFY_APP_SCOPES=read_products,read_orders
# OAuth access token is stored in the database after installation.
# Optional legacy token support:
SHOPIFY_APP_ACCESS_TOKEN=
SHOPIFY_API_VERSION=2023-10
SHOPIFY_WEBHOOK_SECRET=optional_webhook_secret

# SimplyPrint
SIMPLYPRINT_COMPANY_ID=your_company_id
SIMPLYPRINT_API_KEY=your_simplyprint_api_key
SIMPLYPRINT_QUEUE_GROUP_NAME=Shopify
SIMPLYPRINT_RATE_LIMIT_PER_SECOND=5
SIMPLYPRINT_FILE_CACHE_TTL_SECONDS=86400

# Local file uploads
# Files mounted inside the container (e.g. /RemoteFiles)
LOCAL_FILES_DIR=/RemoteFiles
# How often to rescan local files (seconds)
LOCAL_FILES_CACHE_TTL_SECONDS=86400

# Redis (optional)
# Provide REDIS_URL or the host/port/password/db options below.
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
